@{
    ViewData["Title"] = "Home Page";
}

<head>
    <style>
        body {
            background-color: #f5f5f5;
            font-family: Arial, sans-serif;
        }

        button[type=button] {
            margin-top: 10px;
            margin-bottom: 10px;
        }

        .text-center {
            text-align: center;
            margin-top: 150px;
        }

        .display-4 {
            font-size: 36px;
            font-weight: bold;
            color: #333;
        }

        .button-container {
            margin-top: 20px;
        }

        .button-container button {
            display: block;
            margin: 10px auto;
            padding: 12px 20px;
            font-size: 18px;
            font-weight: bold;
            text-align: center;
            color: #fff;
            background-color: #4CAF50;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
            width: 200px;
        }

        .button-container button:hover {
            background-color: #45a049;
        }
    </style>
</head>

<div class="text-center">
    <h1 class="display-4">HelpDesk application</h1>
    <div class="button-container">
        <div>
            <button type="button" onclick="location.href='@Url.Action("Login", "User")'">Login as user</button>
        </div>
        <div>
            <button type="button" onclick="location.href='@Url.Action("Login", "Agent")'">Login as agent</button>
        </div>
    </div>
</div>
